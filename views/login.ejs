<%- include('partials/header') -%>
    <!-- Header until body tag -->

    <body>
                <nav class="purple darken-4" role="navigation">
                    <div class="nav-wrapper container">
                        <div id="logo-container">
                            <img src="images/nu-boot.png" alt="logo" class="brand-logo" height="100%">
                        </div>
                        <ul class="right hide-on-med-and-down">
                            <li>
                                <a href="/login">Login</a>
                            </li>
                        </ul>
                
                        <ul id="nav-mobile" class="side-nav">
                            <li>
                                <a href="#">Navbar Link</a>
                            </li>
                        </ul>
                        <a href="#" data-activates="nav-mobile" class="button-collapse">
                            <i class="material-icons">menu</i>
                        </a>
                    </div>
                </nav>

            <div class="container">
                <!-- form to log in -->
             <h3>Log In</h3>
                <form autocomplete="on" class="create-update-form" action="/sign-in" method="POST">
                    <div class="input-field">
                        <label for="em">Email:</label>
                        <input autocomplete="nope" placeholder="youremail@something.com" type="text" name="email">
                    </div>

                    <div class="input-field">
                        <label for="pass">Password:</label>
                        <input autocomplete="new-password" placeholder="password" type="password" name="password_hash">
                    </div>


                    <button class="btn waves-effect waves-light" type="submit" value="sign in">Sign In
                        <i class="material-icons right">send</i>
                    </button>

                </form>

                <br>
                <a href="/signup">Don't have an account? Click here To register!</a>
            </div>
            <!-- Sticky Footer -->
            <%- include('partials/footer') -%>

                <!-- DO NOT TOUCH!!! -->
    </body>
    <script src="/js/app.js"></script>

    </html>