<%- include('partials/header') -%>
    <!-- Header until body tag -->

    <body>
        <nav class="purple darken-4" role="navigation">
            <div class="nav-wrapper container">
                <div id="logo-container">
                    <img src="images/nu-boot.png" alt="logo" class="brand-logo" height="100%">
                </div>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a href="/login">Login</a>
                    </li>
                </ul>
        
                <ul id="nav-mobile" class="side-nav">
                    <li>
                        <a href="#">Navbar Link</a>
                    </li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="button-collapse">
                    <i class="material-icons">menu</i>
                </a>
            </div>
        </nav>

            <div class="container">
                <h3>Sign Up</h3>

              <form class="col s6" action="/create-user" method="post">
                <div class="input-field col s6">
                <label for="email">Email:</label>
                <input autocomplete="nope" type="text" name="email">
                </div>
                <div class="input-field col s6">
                <label for="password">Password:</label>
                <input autocomplete="new-password" type="password" name="password_hash">
                </div>
                <div class="input-field col s6">
                <label for="first_name">First Name:</label>
                <input type="text" name="first_name">
                </div>
                <div class="input-field col s6">
                <label for="last_name">Last Name:</label>
                <input type="text" name="last_name">
                </div>
                <div class="row">
                        <div class="input-field col s12">
                <select name="campus">
                        <option value="" disabled selected>Choose your Campus</option>
                        <option value="Chicago">Chicago</option>
                        <option value="Evanston">Evanston</option>
                </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="grad_date">Graduation Date:</label>
                            <input type="date" name="grad_date">
                        </div>
                    </div>
                <div class="input-field col s12">
                    <label for="link">Personal Portfolio Link:</label>
                    <input type="text" name="site_link">
                </div>
                <input type="submit" value="sign up">
              </form>
              <br>
            </div>

            <!-- Sticky Footer -->
            <%- include('partials/footer') -%>

                <!-- DO NOT TOUCH!!! -->
    </body>
    <script src="/js/app.js"></script>

    </html>