            <div class="container">
                <h3>Sign Up</h3>

              <form class="col s6" action="/create-user" method="post">
                <div class="input-field col s6">
                    <label for="email">Email:</label>
                    <input placeholder="address@somewhere.com" autocomplete="nope" type="text" id ="email" name="email"  class="validate" required>
                </div>
                <div class="input-field col s6">
                    <label for="password">Password:</label>
                    <input autocomplete="new-password" type="password" name="password_hash"  class="validate" required>
                </div>
                <div class="input-field col s6">
                    <label for="first_name">First Name:</label>
                    <input type="text" name="first_name" class="validate" required>
                </div>
                <div class="input-field col s6">
                    <label for="last_name">Last Name:</label>
                    <input type="text" name="last_name" class="validate" required>
                </div>
                <div class="row">
                        <div class="input-field col s12">
                <select name="campus">
                        <option value="" disabled selected>Choose your Campus</option>
                        <option value="Chicago">Chicago</option>
                        <option value="Evanston">Evanston</option>
                </div>
                <div class="input-field col s12">
                <div class="row">
                        <div class="input-field col s12">
                <label for="grad_date">Graduation Date:</label>
                <input type="date" name="grad_date"  class="validate" required>
                </div>
                </div>
                <div class="input-field col s12">
                <label for="link">Personal Portfolio Link:</label>
                <input placeholder="Link to your personal portfolio" type="text" name="site_link"  class="validate" required>
                </div>
                <input type="submit" value="sign up">
              </form>
            </div>

            <!-- Sticky Footer -->
            <%- include('partials/footer') -%>

